<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    tools:context=".presentation.home_screen.HomeFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_height="50dp"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:autofillHints="username"
        android:background="@drawable/search_field"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_search"
        android:focusable="false"
        android:hint="@string/search_field_text"
        android:id="@+id/et_search_field"
        android:inputType="textAutoComplete"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_shop_icon"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:background="@drawable/ic_shop"
        android:contentDescription="@string/shop"
        android:id="@+id/iv_shop_icon"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="52dp"
        app:layout_constraintEnd_toStartOf="@id/et_search_field"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rootList"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_field" />

</androidx.constraintlayout.widget.ConstraintLayout>